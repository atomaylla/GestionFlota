@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title></title>
    <link href="kendo/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="kendo/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="kendo/styles/kendo.dataviz.min.css" rel="stylesheet" />
    <link href="kendo/styles/kendo.dataviz.default.min.css" rel="stylesheet" />
    <script src="kendo/js/jquery.min.js"></script>
    <script src="kendo/js/kendo.all.min.js"></script>
    <script src="ViewModel/CuentaUsuario/Login.js"></script>
</head>
<body>

    <div id="login" class="centrar">

        <div id="window">

            <ul style="list-style-type: none;margin: 0;padding: 0">



                <li style="margin: 10px 0 0 0;">
                    <label for="fullname" class="required">Usuario</label>
                    <input type="text" id="user" name="user" class="k-textbox" required validationmessage="Campo requerido" style="width: 200px;height: 25px;" />
                </li>

                <li style="margin: 10px 0 0 0;">
                    <label for="fullname" class="required">Clave &nbsp;&nbsp;</label>
                    <input type="password" id="pass" name="pass" class="k-textbox" required validationmessage="Campo requerido" style="width: 200px;height: 25px;" />
                </li>

                <br>

                <li class="accept">
                    <button class="k-button" type="submit" style="width: 300px;" id="btnAceptar">Aceptar</button>
                </li>
                <li class="status">
                </li>
            </ul>


        </div>



        <script>
                $(document).ready(function () {
                    var window = $("#window"),
                        undo = $("#undo");

                    undo.bind("click", function () {
                        window.data("kendoWindow").open();
                        undo.hide();
                    });

                    if (!window.data("kendoWindow")) {
                        window.kendoWindow({
                            width: "330px",
                            actions: ["Minimize", "Maximize", "Close"],
                            title: "Gestion de Flotas",
                            close: function () {
                                undo.show();
                            }
                        });
                    }

                });
        </script>

        <style scoped>
            #login {
                min-height: 500px;
            }

            #undo {
                text-align: center;
                position: absolute;
                white-space: nowrap;
                padding: 1em;
                cursor: pointer;
            }

            .armchair {
                float: left;
                margin: 20px 30px;
                text-align: center;
            }

                .armchair img {
                    display: block;
                    margin-bottom: 10px;
                }

            label {
                display: inline-block;
                width: 90px;
                text-align: right;
            }

            .required {
                font-weight: bold;
            }

            .accept, .status {
                padding-left: 10px;
            }

            .valid {
                color: blue;
            }

            .invalid {
                color: red;
            }

            span.k-tooltip {
                margin-left: 6px;
            }

            .k-textbox {
                width: 11.8em;
            }


            label {
                display: inline-block;
                width: 90px;
                text-align: right;
            }

            .required {
                font-weight: bold;
            }

            .accept, .status {
                padding-left: 10px;
            }

            .valid {
                color: green;
            }

            .invalid {
                color: red;
            }

            span.k-tooltip {
                margin-left: 6px;
            }

            .centrar {
                position: absolute;
                top: 50%;
                left: 50%;
                width: 400px;
                margin-left: -200px;
                height: 300px;
                margin-top: -150px;
                padding: 5px;
            }
        </style>
    </div>

</body>
</html>