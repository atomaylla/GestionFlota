
@{
    ViewBag.Title = "View1";
    
}

@section scripts {
<script src="@Url.Content("~/Scripts/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/fullcalendar.js")" type="text/javascript"></script>
    <script src="~/Scripts/page.js"></script>

}




<br />
<div class="col-md-12">
    <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
            <li>@Html.ActionLink("Listado Planificacion", "Index", "PlanificacionProgramacion")</li>
            <li>@Html.ActionLink("Registrar Planificacion", "Registrar", "PlanificacionProgramacion")</li>

        </ul>
    </div>
    <div class="col-md-9 " style="border:0px solid #000;">

        <div><h3>Registrar Planificacion Programación</h3></div>
        <div class="form-group">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Fecha Servicio</th>
                            <th>Cliente</th>
                            <th>Tipo Servicio</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int counter = 1;
                        foreach (var item in (List<EntityLayer.Solicitud>)@ViewData["Solicitudes"])
                        {
                            <tr>
                                <th scope="row"><input id="idsolicitud" type="radio" value="@item.nroSolicitud"/></th>
                                <td> @item.fechaServicio</td>
                                <td>@item.razonCliente</td>
                                <td>@item.nomTipoServicio</td>
                                <td><a href="#">Ver Itinerario</a></td>
                            </tr>
                            counter++;
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <form id="formitinerario" action="/PlanificacionProgramacion/EnviarPlanificacion" onsubmit="return false">
            <div class="form-group">
                <div class="content-conduni">

                </div>
            </div>
            <button id="regplani" type="submit" class="btn btn-default">Registrar</button>
            <button id="cancplani" type="submit" class="btn btn-default">Cancelar</button>
            </form>
</div>
    </div>
