<script src="/ViewModel/PlanificacionProgramacion/Index.js"></script>

<div id="example" class="container">
    <section class="well">
        <h2 class="ra-well-title">Solicitudes Aprobadas</h2>
        
        <div class="form-horizontal form-widgets col-sm-6">
            <div class="form-group">
                
                <label class="control-label col-sm-4" for="code">
                    <input type="radio" name="radio" id="radio" value="fecha_servicio" data-bind="checked: radio" />
                Inicio del servicio</label>
                <div class="col-sm-8 col-md-6">
                    <input id="fecha" />
                    <script>
                        $("#fecha").kendoDatePicker({
                            format: "yyyy/MM/dd",
                            value: new Date()
                        });
                    </script>
                </div>
            </div>

        </div>



        <div class="form-horizontal form-widgets col-sm-6">
            <div class="form-group">
                
                <label class="control-label col-sm-4" for="status">
                    <input type="radio" name="radio" id="radio" value="tipo_servicio" data-bind="checked: radio" />
                Tipo de servicio</label>
                <div class="col-sm-8 col-md-6">                    
                    @Html.DropDownList("tipoServicio", ViewData["selectTipoServicioList"] as SelectList)
                </div>
            </div>
        </div>


        <div class="clearfix"></div>

        <div class="buttons-wrap">
            <button class="k-button k-state-default" id="btnSearch">Buscar</button>            
        </div>
           
        <div id="gridSolicitudes"></div>
    </section>
</div>