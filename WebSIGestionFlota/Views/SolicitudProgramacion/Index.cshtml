
@{
    ViewBag.Title = "View1";
  
}

@*@section scripts {

    <script src="~/Scripts/page.js"></script>

}*@




<br />
<div class="col-md-12">
    <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
            <li>@Html.ActionLink("Listar Solicitudes", "Index", "SolicitudProgramacion")</li>
            <li>@Html.ActionLink("Registrar Solicitud ", "Registrar", "SolicitudProgramacion")</li>

        </ul>
    </div>
    <div class="col-md-9 " style="border:0px solid #000;">

        <div><h3>Solicitudes de Planificación de Programación</h3></div>

        <div class="form-group">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Fecha Servicio</th>
                            <th>Cliente</th>
                            <th>Tipo Servicio</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
@{int counter = 1;
                        foreach (var item in (List<EntityLayer.Solicitud>)@ViewData["Solicitudes"]) { 
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@item.fechaServicio</td>
                            <td>@item.razonCliente</td>
                            <td>@item.nomTipoServicio</td>
                            <td><a href="#">Editar</a>|<a href="#">Eliminar</a></td>
                        </tr>
                            counter++;
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
