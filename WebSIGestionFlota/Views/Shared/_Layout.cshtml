<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Gestion de Flota</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <link rel="stylesheet" href="/kendo/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/kendo/styles/kendo.common-bootstrap.min.css" />
    <link rel="stylesheet" href="/kendo/styles/kendo.bootstrap.min.css" />
    <link rel="stylesheet" href="/kendo/styles/kendo.dataviz.min.css" />
    <link rel="stylesheet" href="/kendo/styles/kendo.dataviz.bootstrap.min.css" />



    <script src="/kendo/js/jquery.min.js"></script>
    <script src="/kendo/js/jquery-1.9.1.min.js"></script>
    <script src="/kendo/js/angular.js"></script>
    <script src="/kendo/js/kendo.all.min.js"></script>
    <script src="/kendo/js/kendo.timezones.min.js"></script>
    <script src="/kendo/js/theme-chooser.js"></script>
    <script src="/kendo/js/kendo.messages.es-ES.js"></script>
    <link rel="stylesheet" href="/styles/styles.css" />


    <!--[if lt IE 9]>
    <script src="/kendo/js/html5shiv.js"></script>
    <script src="/kendo/js/respond.min.js"></script>
    <![endif]-->

</head>
<body>

    <header>
        <div class="container">
            <h1 class="col-sm-3 hidden-sm">CRTransportes</h1>
        </div>
    </header>



    <div id="body">

        <div class="container">
            <div id="megaStore">
                <ul id="menu">
                    <li>
                        Programación
                        <ul>
                            <li>@Html.ActionLink("Registrar Planificación Programación", "Index", "PlanificacionProgramacion")</li>

                            <li>@Html.ActionLink("Solicitud Planificación de Programación", "Index", "SolicitudProgramacion")</li>
                            <li>@Html.ActionLink("Atender Solicitud de Planificación", "SolicitudesAprobadas", "AtenderSolicitud")</li>
                            
                        </ul>
                    </li>

                    <li>
                        Facturación
                        <ul>
                            <li>@Html.ActionLink("Control de Gastos", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Facturación", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Reportes", "Contact", "Home")</li>
                        </ul>
                    </li>


                    <li>
                        <a href="@Url.Action("Logout", "CuentaUsuario")"><img src="../../Images/logout.png" height="15px" /></a>
                    </li>
                </ul>
            </div>

            <script>
                $(document).ready(function () {
                    $("#menu").kendoMenu();
                    $("body").css("font-size", 14 + "px");
                    $("#example .form-widgets")
                    .find("select:not([multiple])").kendoDropDownList().end()
                    .find("select[multiple]").kendoMultiSelect().end()
                    .find("input:not([type])").addClass("k-textbox").end()
                    .find("input[type=date]").kendoDatePicker().end()
                    .find("input[type=number]").kendoNumericTextBox({
                        format: "0"
                    });
                });
            </script>


        </div>




        <div id="example">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>


        <footer>Copyright &copy; 2015 <a href="">CR Transportes</a>. All rights reserved.</footer>
        @RenderSection("scripts", required: false)


        <style scoped>
            #undo {
                text-align: center;
                position: absolute;
                white-space: nowrap;
                padding: 1em;
                cursor: pointer;
            }

            .armchair {
                float: left;
                margin: 20px 30px;
                text-align: center;
            }

                .armchair img {
                    display: block;
                    margin-bottom: 10px;
                }

            label {
                display: inline-block;
                width: 90px;
                text-align: right;
            }

            .required {
                font-weight: bold;
            }

            .accept, .status {
                padding-left: 10px;
            }

            .valid {
                color: blue;
            }

            .invalid {
                color: red;
            }

            span.k-tooltip {
                margin-left: 6px;
            }

            .k-textbox {
                width: 11.8em;
            }


            label {
                display: inline-block;
                width: 90px;
                text-align: right;
            }

            .required {
                font-weight: bold;
            }

            .accept, .status {
                padding-left: 10px;
            }

            .valid {
                color: green;
            }

            .invalid {
                color: red;
            }

            span.k-tooltip {
                margin-left: 6px;
            }
        </style>
</body>
</html>
