@{
    ViewBag.Title = "View1";
}




<br />
<div class="col-md-12">
    <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
            <li>@Html.ActionLink("Registrar Atencion de Solicitud de Planificacion", "Index", "AtenderSolicitud")</li>
            <li>@Html.ActionLink("Listado Solicitudes Aprobadas", "SolicitudesAprobadas", "AtenderSolicitud")</li>
            <li>@Html.ActionLink("Listado Solicitudes Rechazadas", "SolicitudesRechazadas", "AtenderSolicitud")</li>
        </ul>
    </div>
    <div class="col-md-9 " style="border:0px solid #000;">

        <div><h3>Listado Solicitud Programación</h3></div>

        <div class="form-group">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Fecha Servicio</th>
                            <th>Cliente</th>
                            <th>Tipo Servicio</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int counter = 1;
                        foreach (var item in (List<EntityLayer.Solicitud>)@ViewData["Solicitudes"])
                        {
                            <tr>
                                <th scope="row">@counter</th>
                                <td> @item.fechaServicio</td>
                                <td>@item.razonCliente</td>
                                <td>@item.nomTipoServicio</td>
                                <td><a href="#">Editar</a>|<a href="#">Eliminar</a></td>
                            </tr>
                            counter++;
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


